<% provide(:title,"Users") %>
<h1>利用者一覧</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-hover" id="users-table">
    <%=will_paginate %>
      <thead>
       <tr>
         <th>名前</th>
       </tr>
      </thead>  
      
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%=link_to user.name ,user %></td>
        </tr>
        <% end %>
      </tbody>
      
       
    </table>
    <%=will_paginate %> 
  </div>
</div>