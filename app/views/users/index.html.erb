<% provide(:title,"Users") %>
<h1>利用者一覧</h1>
<div class="row">
  <div class="col-md-7">
    <table class="table table-hover" id="users-table">
    <%=will_paginate %>
      <thead>
       <tr>
         <th>名前</th>
       </tr>
      </thead>  
      
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%=link_to user.name ,user %><span>|</span><%=link_to "削除", user_path(user), method: :delete ,data:{confirm: "#{user.name}を削除します。よろしいですか？"} %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%=will_paginate %> 
  </div>
  
  <div class="col-md-4">
    <%= form_with(model:@user, url:users_path, method: :get, local:true) do |f| %>
      <p>ユーザー名を検索</P>
      <%=f.text_field:search, id:"search-form"%>
      <%=f.submit "検索", class:"btn btn-primary btn-sm btn-search" %>
    <% end %>
  </div>
</div>