<% provide(:title,@user.name) %>
<div class="row">
  <div class="col-md-8 col-md-offset-2" >
    <table class="table" id="user-table" >
      <tbody>
        <tr>
          <td><%= link_to "←前月へ",user_path(date:@first_day.prev_month), class: "btn btn-default" %><%= l(@first_day, format: :middle) %>時間管理表<%= link_to "翌月へ→",user_path(date:@first_day.next_month), class: "btn btn-default" %></td>
          <td>指定時間  <%= format_basic_info(@user.work_time) %></td>
          <td><%= format_basic_info(@user.basic_time) %>  基本時間</td>
          <td>初日 <%= l(@first_day, format: :short)%></td>
        </tr>
        <tr>
          <td>所属 <%= @user.department? ? @user.department : "未所属" %></td>
          <td>氏名</td>
          <td>コード</td>
          <td></td>
          <td>出勤日数</td>
          <td>締め <%= l(@last_day, format: :short) %></td>
        </tr>
      </tbody>
    </table>
    <table class="table" id="user-attendance-table" >
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>残業指示</th>　　　<%# 後でカラムとして追加予定　#%>
          <th>指示者</th>
        </tr>
        <tr>
          <th></th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <tr>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td><%=$days_of_the_week[day.worked_on.wday] %></td>
            <td><%=l(day.started_at, format: :time) if day.started_at.present? %></td>
            <td><%=l(day.finished_at,format: :time) if day.finished_at.present? %></td>
            <td></td>
            <td></td>
            <td></td>
              <% if btn_text=attendance_state(day) %>
                <%= link_to "#{btn_text}登録",user_attendance_path(@user,day),method: :patch, class:"btn btn-default" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>