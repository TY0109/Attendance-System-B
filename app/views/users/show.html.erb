<% provide(:title,@user.name) %>
    <table class="table table-bordered" id="user-info-table" >  <%# col-md　書いていない#%>
      <tbody>
        <tr>
          <td><%= link_to "←",user_path(date:@first_day.prev_month), class: "btn btn-default btn-change" %><span class="time-board"><%= l(@first_day, format: :middle)%> 時間管理表</span><%= link_to "→",user_path(date:@first_day.next_month), class: "btn btn-default btn-change" %></td>
          <td>指定時間  <%= format_basic_info(@user.work_time) %></td>   <%# 月切り替えボタンの追加により、縦幅が拡大するため、隣のセルのvertical中央の基準が変化する。#%>
          <td colspan="3"><%= format_basic_info(@user.basic_time) %>  基本時間</td> <%#　セルの幅の指定より先に結合を考える #%> 
          <td>初日 <%= l(@first_day, format: :short)%></td>
        </tr>
        <tr>
          <td>所属 <%= @user.department? ? @user.department : "未所属" %></td>
          <td>氏名</td>
          <td>コード</td>
          <td></td>
          <td>出勤日数 <%=@worked_sum %>日</td> <%#　入力した文字によって、セルの幅は自動調節してくれるので先に文字を入れてしまおう。#%>
          <td>締め <%= l(@last_day, format: :short) %></td>
        </tr>
      </tbody>
    </table>
    
    <div class="btn-wrapper" %>
      <%= link_to "勤怠を編集",attendances_edit_one_month_user_path(date:@first_day), class: "btn btn-default btn-edit-one-month" %>
    </div>
    
    <table class="table table-bordered table-striped" id="user-attendance-table" >  <%# table-striped　はtheadには反映されていない？#%>
      <thead>
        <tr>
          <th rowspan="2">日付</th>
          <th rowspan="2">曜日</th>
          <th colspan="3">出社</th>
          <th colspan="3">退社</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>残業指示</th>　　　<%# 後でカラムとしてモデルに追加予定　#%>
          <th>指示者</th>
        </tr>
        <tr>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <tr>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td><%=$days_of_the_week[day.worked_on.wday] %></td>
            <td><%=l(day.started_at, format: :hour) if day.started_at.present? %></td>  <%# 独自にformatを編集#%>
            <td><%=l(day.started_at, format: :minute) if day.started_at.present? %></td>
            <td>
              <% if btn_text=attendance_state(day) %>
                <%= link_to "#{btn_text}登録",user_attendance_path(@user,day),method: :patch, class:"btn btn-default" %>
              <% end %>
            </td>
            <td><%=l(day.finished_at,format: :hour) if day.finished_at.present? %></td>
            <td><%=l(day.finished_at,format: :minute) if day.finished_at.present? %></td>
            <td></td>
            <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= working_times(day.started_at,day.finished_at) %>  <%# 引数を渡し、メソッドを呼び出し#%>
              <% end %>
            </td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>