<% provide(:title,@user.name) %>
<div class="row">
  <div class="col-md-8 col-md-offset-2" >
    <table class="table" id="user-table" >
      <tbody>
        <tr>
          <td><%= l(@first_day, format: :middle) %>時間管理表</td>
          <td>指定勤務時間  <%= format_basic_info(@user.work_time) %></td>
          <td><%= format_basic_info(@user.basic_time) %>  基本時間</td>
          <td>初日</td>
        </tr>
        <tr>
          <td>所属 <%= @user.department? ? @user.department : "未所属" %></td>
          <td>氏名</td>
          <td>コード</td>
          <td></td>
          <td>出勤日数</td>
          <td>締め</td>
        </tr>
      </tbody>
    </table>
    <table class="table" id="user-attendance-table" >
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>残業指示</th>　　　<%# 後でカラムとして追加　#%>
          <th>指示者</th>
        </tr>
      </thead>
      <tbody>
        <% (@first_day..@last_day).each do |day| %>
        <tr>
          <td><%= l(day, formmat: :short) %></td>
          <td><%=$days_of_the_week[day.wday] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>