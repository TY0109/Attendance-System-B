<% provide(:title,'edit_basic_info') %>
<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2 ">
    <%= form_with(model:@user, url:update_basic_info_user_path(current_user),method: :patch, local:true) do |f| %>
      <%= render 'shared/error_messages', object:@user %>
      
        <%= f.label :basic_time, class: "label-form" %>
        <%= f.time_field :basic_time , class: "form-control" %>
        
        <%= f.label :work_time, class: "label-form" %>
        <%= f.time_field :work_time, class: "form-control" %>
        
        <%= f.submit "編集", class:"btn btn-block btn-primary btn-form" %>
    <% end %>
    
     
  </div>
</div>